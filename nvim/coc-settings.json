{
  "list.maxHeight": 80,
  "list.source.files.command": "fd",
  "list.source.files.args": ["--type", "f", "--hidden", "--follow", "--ignore-case", "--exclude", "'.git'"],
  "list.source.grep.command": "rg",
  "list.source.grep.defaultOptions": ["--interactive", "--auto-preview"],
  "list.source.gstatus.defaultOptions": ["--ignore-case", "--normal"],
  "list.source.buffers.defaultOptions": ["--ignore-case"],
  "list.source.lines.defaultOptions": ["--interactive", "--ignore-case"],
  "coc.source.emoji.filetypes": [
    "markdown",
    "gitcommit"
  ],
  "python.pythonPath": "/usr/bin/python3",
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "yapf",
  "coc.preferences.formatOnSaveFiletypes": ["python", "json", "go", "javascript", "dockerfile", "sh"],
  "coc.preferences.rootPatterns": [
    ".vim",
    ".git",
    ".projections.json",
    "pubspec.lock",
    "Gopkg.lock",
    "package.json",
    "Gemfile",
    "Rakefile",
    "Makefile",
    "requirements.txt",
    "venv"
  ]
}
