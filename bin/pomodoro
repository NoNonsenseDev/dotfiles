#!/usr/bin/env bash

send_notification() {
  notify-send --urgency=critical "$1"
}

short_break() {
  send_notification "5m break"
  sleep 5m
  send_notification "Go back to work"
}

long_break() {
  send_notification "15m break"
  sleep 15m
  send_notification "Go back to work"
}

while true; do
  for i in {1..4}; do
    sleep 25m
    [ "$i" -ne "4" ] && short_break
  done

  long_break
done
