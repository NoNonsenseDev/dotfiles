#!/usr/bin/env bash

unameOut=$(uname -r)
case "${unameOut}" in
  *Microsoft)
    clip.exe "$@"
    exit 0
  ;;
  *Linux*)
    xclip -selection c "$@"
    exit 0
  ;;
  *Darwin*)
    pbcopy "$@"
    exit 0
  ;;
  *)
esac

