#/usr/bin/env bash

REPOS="$(gh repo list --limit 100 --source --json name | jq -r '.[].name')"
for repo in $REPOS; do
  if [ ! -d ~/code/"$repo" ]; then
    echo "Cloning $repo"
    gh repo clone "$repo" ~/code/"$repo"
  fi

  echo "Fetching ~/code/$repo"
  git -C ~/code/"$repo" fetch --all --prune
done
