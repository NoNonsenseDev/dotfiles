{
  "coc.preferences.minTriggerInputLength": 0,
  "coc.preferences.hoverTarget": "echo",
  "coc.source.tag.enable": true,
  "coc.preferences.triggerSignatureHelp": true,
  "coc.preferences.autoTrigger": "none",
  "coc.source.emoji.filetypes": ["markdown", "javascript"],
  "coc.preferences.diagnostic.displayByAle": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"]
    },
    "golang": {
      "command": "bingo",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "formatStyle": "goimports"
      }
    }
  }
}
